<h1>Cocktails#show</h1>
<p>Find me in app/views/cocktails/show.html.erb</p>
<div class="cocktail-main-card">
  <h2><%= @cocktail.name %></h2>
</div>

<div class="cocktail-ingredients">
  <% @cocktail.doses.each do |dose| %>
    <%= dose.ingredient.name %>
    (<%= dose.description %>)
    <%= link_to dose_path(dose), method: :delete, data: {confirm: "Are you sure you want to delete"} do %>
      <i class="far fa-trash-alt"></i>
    <% end %>
  <% end %>
</div>

<%= link_to cocktails_path do %>
  <i class="fas fa-chevron-left"></i> Back
<% end %>
